	journaltitle = {{PLOS} {ONE}},
	shortjournal = {{PLOS} {ONE}},
	author = {Rodriguez, Alfredo and Ehlenberger, Douglas B. and Dickstein, Dara L. and Hof, Patrick R. and Wearne, Susan L.},
	urldate = {2017-09-21},
	date = {2008-04-23},
	keywords = {Algorithms, Confocal laser microscopy, Dendritic structure, Head, Imaging techniques, Neck, Neuronal dendrites, Neuronal morphology}
}

