	keywords = {Glutamate, Algorithms, User interfaces, Dendritic structure, Neuronal dendrites, Neuronal Plasticity, Graphical user interface, Synaptic plasticity}
}

@article{beaurepaire_epifluorescence_2002,
	title = {Epifluorescence collection in two-photon microscopy},
