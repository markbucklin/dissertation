	number = {12},
	journaltitle = {Neurological Research},
	shortjournal = {Neurol. Res.},
	author = {Goldschmidt, Ezequiel and Ielpi, Marcelo and Loresi, Monica and D'adamo, Maximiliano and Giunta, Diego and Carrizo, Antonio and Ajler, Pablo and Yampolsky, Claudio and Argibay, Pablo},
