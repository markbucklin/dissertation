	journaltitle = {Frontiers in Human Neuroscience},
	shortjournal = {Front. Hum. Neurosci},
	author = {Carhart-Harris, Robin Lester and Leech, Robert and Hellyer, Peter John and Shanahan, Murray and Feilding, Amanda and Tagliazucchi, Enzo and Chialvo, Dante R. and Nutt, David},
	urldate = {2014-03-05},
	date = {2014},
	keywords = {entropy, consciousness, 5-{HT}2A receptor, criticality, default mode network, metastability, {REM} sleep, serotonin},
	file = {Full Text PDF:/home/mark/Zotero/storage/DF6GCAX7/Carhart-Harris et al. - 2014 - The entropic brain a theory of conscious states i.pdf:application/pdf}
}

