@article{llano_rapid_2009,
	title = {Rapid and Sensitive Mapping of Long-Range Connections In Vitro Using Flavoprotein Autofluorescence Imaging Combined With Laser Photostimulation},
	volume = {101},
	url = {http://jn.physiology.org/content/101/6/3325.abstract},
