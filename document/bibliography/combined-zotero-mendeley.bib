	pmid = {25082547},
	keywords = {Cell Count, Cell Survival, Cells, Cultured, Chemotherapy,, Collagen, {CSF} leaks,, Cytostatic Agents, Dura Mater, Dura mater,, Fibroblast Growth Factor 2, Fibroblasts, Growth factors, Humans, Insulin, Intercellular Signaling Peptides and Proteins, Serum, Wound Healing}
