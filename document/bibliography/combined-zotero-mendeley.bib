	journaltitle = {{bioRxiv}},
	author = {Dragly, Svenn-Arne and Mobarhan, Milad Hobbi and Lepperød, Mikkel and Tennøe, Simen and Hafting, Torkel and Fyhn, Marianne and Malthe-Sørenssen, Anders},
