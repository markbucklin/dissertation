	keywords = {halorhodopsin, bacteriorhodopsin, gene duplication, halobacteria, phylogenetic tree, sensory rhodopsin},
	file = {ScienceDirect Full Text PDF:/home/mark/Zotero/storage/HNIHJX3E/Ihara et al. - 1999 - Evolution of the archaeal rhodopsins evolution ra.pdf:application/pdf;ScienceDirect Snapshot:/home/mark/Zotero/storage/D5E2S7GK/S0022283698922860.html:text/html}
